<div class="login">

<% if logged_in? %>
  <a href="/users/<%= current_user.id %>">
  <%= current_user.name %></a><br>
  <span style="font-size: x-small"><a href="/logout"> Logout</a></span>
<% else %>
  <%= form_tag("/session", method: "post") do %>
    <%= text_field_tag(:email, nil, placeholder: 'Email') %> <%= password_field_tag(:password, nil, placeholder: 'Password') %> <%= submit_tag("Login") %>
  <% end %>
<% end %>

</div>